@{
    Layout = null;
}

@model ProductCategoriesViewModel

<!DOCTYPE html>
<html>
<head>
    <meta name = "viewport" content="width=device-width"/>
    <title>About</title>
    <style>
        #header{
            width: 900px;
            height: 100px;
            border-radius: 20px;
            background: blue;
            margin-bottom: 10px;
            padding: 20px;
        }
        
        #menu{
            width: 200px;
            height: 300px;
            border-radius: 20px;
            background: blue;
            float : left;
            padding: 20px;
        }
        
        ul{
        margin: 0;
        padding: 0;
        }
        #menu li {
            list-style: none;
            padding: 10px;
        }
        
        #menu a {
            text-decoration: none;
            color: white;
        }
        
        #content {
            width: 650px;
            height: 300px;
            border-radius: 20px;
            background: blue;
            float : left;
            padding: 20px;
            margin-left: 10px;
        }
        
        #footer{
            width: 900px;
            height: 100px;
            border-radius: 20px;
            background: blue;
            margin-top: 10px;
            padding: 20px;
        }
    </style>
</head>

<body>

<div id="header">
    Header
</div>

@Html.Partial("_Menu",Model.Categories)

<div id="content">
    Content
</div>

<div style="clear:both"></div>

<div id="footer">
    Footer
</div>


</body>
</html>   